                        p.news-article__text= arrayOfArticles[3].p  
                        span.news-articel__date(data="")= arrayOfArticles[3].span  
    ul.news-content-list-center 
        li
            a(href="#")
                article.news-article__item.big-article-item(style=arrayOfArticles[4].background)
