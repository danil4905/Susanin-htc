mixin contentBlock(arrayOfArticles)
    ul.news-content-list-left
        li
            a(href="#")
                article.news-article__item
                    .news-article-image
                        img(src=arrayOfArticles[0].img, alt="#") 
                    .news-article-content
                        p.news-article__tex= arrayOfArticles[0].p
                        span.news-articel__date(data="")= arrayOfArticles[0].span	
        li
            a(href="#")
                article.news-article__item
                    .news-article-image
                        img(src=arrayOfArticles[1].img, alt="#") 
                    .news-article-content
                        p.news-article__text= arrayOfArticles[1].p 
                        span.news-articel__date(data="")= arrayOfArticles[1].span 
        li
            a(href="#")
                article.news-article__item
                    div(class=arrayOfArticles[2].wrap)
                        img(src=arrayOfArticles[2].img, alt="")
                    div(class=arrayOfArticles[2].classList)
                        p.news-article__text= arrayOfArticles[2].p  
                        span.news-articel__date(data="")= arrayOfArticles[2].span  	
        li
            a(href="#")
                article.news-article__item
                    .news-article-image
